<h1>All Books <span class="count">(<%= Book.count %>)</span> </h1> 

<div class="row">
    <form class="col s12" action="/" method="POST">
        <input type="hidden" name="authenticity_token" value="<% form_authenticity_token %>">
        <div class="row">
            <div class="input-field col s12">
                <input id="book_title" name="book_title" type="text" class="validate">
                <label for="book_title">Title</label>
            </div>

            <div class="input-field col s12">
                <input id="book_author" name="book_author" type="text" class="autocomplete">
                <label for="book_author">Author</label>
            </div>

            <div class="input-field col s6">
                <input id="book_genre" name="book_genre" type="text" class="validate">
                <label for="book_genre">Genre</label>
            </div>

            <div class="input-field col s6">
                <input id="book_year" name="book_year" type="text" class="validate">
                <label for="book_year">Year</label>
            </div>
        </div>

        <button class="btn waves-effect waves-light" type="submit" name="action">Submit
            <i class="material-icons right">send</i>
        </button>
    </form>
</div>

<table class="striped highlight responsive-table">
    <thead>
        <tr>
            <th>Book Title</th>
            <th>Genre</th>
            <th>Year</th>
            <th>Author</th>
            <th></th>
        </tr>
    </thead>

    <tbody>
        <% for book in @books %>
        <% @author = Author.find_by_id(book.author_id) %>
        <tr>
            <td><%= book.title %></td>
            <td><%= book.genre %></td>
            <td><%= book.year_released %></td>
            <td><%= "#{@author.first_name} #{@author.last_name}" %></td>
            <td>Delete</td>
        </tr>
        <% end %>
    </tbody>
</table>